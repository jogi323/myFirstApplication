  <body>
      <h2>My Todo List.</h2>
      <div id="todo-table">
        <form>
          <input type="text" name="item" placeholder="Add item here....." required/>
          <button type="submit">Add Item</button>
        </form>
        <ul>

            <% for(var i=0;i<todos.length;i++){%>
              <li>
                <%= todos[i].item%>
              </li>
            <% } %>

        </ul>
      </div>

      <!-- if(data[i].item.replace(/ /g, "") == req.params.item.replace(/ /g, "")){
